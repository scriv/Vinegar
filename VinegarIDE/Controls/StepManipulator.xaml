<UserControl x:Class="Vinegar.Ide.Controls.StepManipulator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             HorizontalContentAlignment="Left" ToolTip="Insert a step here">
	<Grid Height="20">
		<Rectangle Width="300" Height="1">
			<Rectangle.Fill>
				<LinearGradientBrush>
					<LinearGradientBrush.GradientStops>
						<GradientStop Color="#1d689e"/>
						<GradientStop Color="Transparent" Offset="1.2"/>
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Polygon Fill="#1d689e" Points="30,10 15,20 0,20 0,0 15,0" HorizontalAlignment="Left" />
		<TextBlock Text="+" Foreground="White" HorizontalAlignment="Left" Margin="5 -3 0 0" FontSize="16" />
	</Grid>
</UserControl>
